// --------------------- SkyX moon material ------------------------
// ------------------------ GLSL Vertex ----------------------------

// IN
attribute vec4 vertex; // iPosition
attribute vec2 uv0;    // iUV
// OUT
varying vec4 vUVYLength;
// UNIFORM
uniform mat4 uWorld;
uniform vec3 uSkydomeCenter;

void main(void)
{
	// Clip space position
    gl_Position = gl_ModelViewProjectionMatrix * vertex;
	// World position
    vec3 ObjectSpacePosition = (uWorld * vertex).xyz - uSkydomeCenter;

    // UV
    vUVYLength.xy = uv0;
    // Y
    vUVYLength.z  = ObjectSpacePosition.y;
    // Length
    vUVYLength.w  = length(ObjectSpacePosition);
}